<header class="navbar navbar-expand-lg navbar-dark bg-secondary px-5 py-3">
	<div class="container-fluid">
		<a class="navbar-brand fw-bold" href="/">HRM</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav ms-5 me-auto mb-2 mb-lg-0">
				<li class="nav-item mx-3">
					<a class="nav-link active text-primary" href="/">Home</a>
				</li>
				<li class="nav-item mx-3">
					<a class="nav-link" href="/admin">Admin</a>
				</li>
				<li class="nav-item mx-3">
					<a href="" class="nav-link">Contact Us</a>
				</li>
			</ul>
			{% if app.user %}
				<div class="dropdown">
					<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
						<i class="fa-solid fa-user me-2"></i>
						{{ app.user.username }}
					</button>
					<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
						{% if app.user.roles %}
							<li>
								<a class="dropdown-item" href="/profile">My Profile</a>
							</li>
							<li>
								<a class="dropdown-item" href="/attendance">Attendances</a>
							</li>
							<li>
								<a class="dropdown-item" href="/admin">Admin</a>
							</li>
						{% endif %}
						<li>
							<a class="dropdown-item" href="{{ path('app_logout') }}">Log out</a>
						</li>
					</ul>
				</div>
			{% else %}
				<a href="{{ path('app_login') }}" class="btn btn-secondary border-primary">
					<i class="fa-solid fa-right-to-bracket me-2"></i>Sign in</a>
			{% endif %}
		</div>
	</div>
</header>
